<% include partials/_header %>


<div class="container">
    <h3>Editar tarea</h3>
    <div class="col-md-5">
        <div class="card card-body">
            <form action="/update/<%= task.id %>" method="POST">
                <div class="form-group">
                    <input type="text" name="title" id="title" class="form-control" placeholder="Ingrese su titulo" value="<%= task.title %>">
                </div>
                <div class="form-group">
                    <input type="text" name="description" id="description" class="form-control" placeholder="Ingrese su descripcion" value="<%= task.description %>">
                </div>
                <input type="submit" value="Enviar" class="btn btn-success btn-block">
            </form>
        </div>
    </div>
</div>
<script src="js/main.js"></script>
<% include partials/_footer %>